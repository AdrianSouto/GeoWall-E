<Window x:Class="GeoWalle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="8*"/>
                                <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <TextBox Grid.Row="0" x:Name="Input" Margin="0,0,0,10" AcceptsTab="True" AcceptsReturn="True"/>
                        <Button Grid.Row="1" Click="OnButtonClicked">Draw</Button>
                </Grid>
                <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="8*"/>
                                <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Border ClipToBounds="True" Margin="0,0,0,10">
                                <Canvas x:Name="MiCanvas"  Background="LightGray"  />
                        </Border>
                        <TextBlock Grid.Row="1" x:Name="Output"/>
                </Grid>
