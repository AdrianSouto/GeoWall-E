<Window x:Class="GeoWalle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
        <Grid>
                <StackPanel Orientation="Horizontal" Width="800" Height="450">
                        <StackPanel HorizontalAlignment="Left" Width="300" Margin="10" Height="450">
                                <TextBox x:Name="Input" Height="350" Margin="0,0,0,10" MaxLines="100" AcceptsTab="True" AcceptsReturn="True"/>
                                <Button Width="300" Height="30" Click="OnButtonClicked">Draw</Button>
                        </StackPanel>   
                        <StackPanel HorizontalAlignment="Right" Width="450" Margin="10" Height="450">
                                <Canvas x:Name="MiCanvas" Background="White" Width="450" Height="300" HorizontalAlignment="Right" Margin="0,0,0,10"/>
                                <TextBlock Width="450" Height="90" x:Name="Output"/>
                        </StackPanel>   
                        
                </StackPanel>
                
        </Grid>
        
</Window>
